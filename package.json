{
  "name": "articl-frontent-dev",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "postinstall.xxx": "npm run build",
    "start": "node index.js"
  },
  "main": "index.js",
  "dependencies": {
    "@picocss/pico": "^1.5.2",
    "@rushstack/eslint-patch": "^1.1.3",
    "axios": "^0.27.2",
    "core-js": "^3.22.8",
    "express": "^4.18.1",
    "feather-icons": "^4.29.0",
    "lodash": "^4.17.21",
    "sass-rem": "^3.0.0",
    "serve-static": "^1.15.0",
    "v3-infinite-loading": "^1.0.6",
    "vue": "^3.2.36",
    "vue-cookies": "^1.8.1",
    "vue-feather": "^2.0.0",
    "vue-router": "^4.0.15",
    "vuedraggable": "^4.1.0",
    "vuex": "^4.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@babel/eslint-parser": "^7.18.2",
    "@vue/cli-plugin-babel": "^5.0.4",
    "@vue/cli-plugin-eslint": "^5.0.4",
    "@vue/cli-plugin-router": "~5.0.0",
    "@vue/cli-plugin-vuex": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "@vue/eslint-config-airbnb": "^6.0.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "eslint": "^8.17.0",
    "eslint-config-hardcore": "^24.7.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-padding": "0.0.4",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-vue": "^9.1.0",
    "eslint-plugin-vuejs-accessibility": "^1.2.0",
    "sass": "^1.52.2",
    "sass-loader": "^13.0.0",
    "typescript": "^4.7.3"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "hardcore/base"
    ],
    "parserOptions": {
      "parser": "@babel/eslint-parser"
    },
    "overrides": [
      {
        "files": [
          "src/**/*.js",
          "src/**/*.vue"
        ]
      }
    ],
    "rules": {
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "double",
        {
          "avoidEscape": true
        }
      ],
      "space-infix-ops": "error",
      "no-underscore-dangle": "error",
      "padded-blocks": [
        "error",
        "alneverways"
      ],
      "padding-line-between-statements": [
        "warn",
        {
          "blankLine": "always",
          "prev": "*",
          "next": "block"
        },
        {
          "blankLine": "always",
          "prev": "block",
          "next": "*"
        },
        {
          "blankLine": "always",
          "prev": "*",
          "next": "block-like"
        },
        {
          "blankLine": "always",
          "prev": "block-like",
          "next": "*"
        }
      ]
    }
  },
  "browserslist": [
    "> 1%",
    "not ie 11",
    "not op_mini all"
  ],
  "license": "ISC"
}
