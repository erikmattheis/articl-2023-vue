{
  "name": "articl-frontent-dev",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "postinstall": "npm run build",
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "start": "node index.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@picocss/pico": "^1.5.0",
    "axios": "^0.26.1",
    "core-js": "^3.8.3",
    "express": "^4.17.3",
    "feather-icons": "^4.29.0",
    "lodash": "^4.17.21",
    "sass-rem": "^3.0.0",
    "serve-static": "^1.15.0",
    "v3-infinite-loading": "^1.0.6",
    "vue": "^3.2.13",
    "vue-cookies": "^1.8.1",
    "vue-feather": "^2.0.0",
    "vue-router": "^4.0.3",
    "vuedraggable": "^4.1.0",
    "vuex": "^4.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@babel/eslint-parser": "^7.12.16",
    "@vue/cli-plugin-babel": "^5.0.4",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-plugin-router": "~5.0.0",
    "@vue/cli-plugin-vuex": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "eslint": "^7.32.0",
    "eslint-plugin-padding": "0.0.4",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-vue": "^8.0.3",
    "eslint-plugin-vuejs-accessibility": "^1.1.1",
    "sass": "^1.32.7",
    "sass-loader": "^12.0.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:vue/vue3-essential",
      "plugin:promise/recommended",
      "plugin:vuejs-accessibility/recommended"
    ],
    "parserOptions": {
      "parser": "@babel/eslint-parser"
    },
    "plugins": [
      "simple-import-sort",
      "vuejs-accessibility",
      "vue",
      "promise"
    ],
    "overrides": [
      {
        "files": [
          "src/**/*.js",
          "src/**/*.vue"
        ]
      }
    ],
    "rules": {
      "max-len": "off",
      "linebreak-style": [
        "error",
        "unix"
      ],
      "array-bracket-newline": [
        "error",
        "never"
      ],
      "function-call-argument-newline": [
        "error",
        "consistent"
      ],
      "complexity": [
        "warn",
        {
          "max": 2
        }
      ],
      "no-await-in-loop": "error",
      "no-eval": "error",
      "no-implied-eval": "error",
      "padded-blocks": [
        "error",
        "always"
      ],
      "prefer-promise-reject-errors": "error",
      "sort-imports": "error",
      "padding-line-between-statements": [
        "error",
        {
          "blankLine": "always",
          "prev": "*",
          "next": "*"
        },
        {
          "blankLine": "never",
          "prev": "import",
          "next": "import"
        },
        {
          "blankLine": "never",
          "prev": "const",
          "next": "const"
        },
        {
          "blankLine": "never",
          "prev": "let",
          "next": "let"
        }
      ]
    }
  },
  "browserslist": [
    "> 1%",
    "not ie 11",
    "not op_mini all"
  ]
}